# A sample Guardfile

guard 'pow' do
  #watch('.powrc')
  #watch('.powenv')
  #watch('.rvmrc')
  #watch('Gemfile')
  #watch('Gemfile.lock')
  #watch('config/application.rb')
  #watch('config/environment.rb')
  watch(%r{^.*\.*$})
  watch(%r{^views/.*\.erb$})
  watch(%r{^public/vendor/bootstrap/css/.*\.css$})
  watch(%r{^public/vendor/bootstrap/jss/.*\.js$})
  
end